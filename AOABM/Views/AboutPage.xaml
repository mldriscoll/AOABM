<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AOABM.Views.AboutPage"
             xmlns:vm="clr-namespace:AOABM.ViewModels"
             Title="{Binding Title}">

    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView Grid.Row="1">
        <StackLayout Orientation="Vertical" Padding="30,24,30,24" Spacing="10" x:Name="SL">
            <Label Text="j-novel.club username: " TextColor="Black"></Label>
            <Entry x:Name="username" BackgroundColor="AliceBlue"></Entry>
            <Label TextColor="Black">j-novel.club password:</Label>
            <Entry x:Name="password" BackgroundColor="AliceBlue" IsPassword="True"></Entry>
            <Button Text="Update Manga" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ScrollView>

</ContentPage>
